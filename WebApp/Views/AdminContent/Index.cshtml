@using Entities.Concrete
@model List<Content>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
@using (Html.BeginForm("Index", "AdminContent", FormMethod.Post))
{
    <p>
        @Html.Label("Arama Yap")
        @Html.TextBox("key", "", new { @class = "form-control w-25 d-inline" })
        <input type="submit" value="Ara" class="btn btn-primary" />
    </p>
}

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- /.col -->
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <div class="tab-content">
                            <!-- /.tab-pane -->
                            <div class="active tab-pane" id="timeline">
                                <!-- The timeline -->

                                <div class="timeline timeline-inverse">
                                    <!-- timeline time label -->
                                    @foreach (var item in Model)
                                    {
                                        <div class="time-label">
                                            <span class="bg-success">
                                                @item.ContentDate.ToString("dd.MM.yyyy HH:mm")
                                            </span>
                                        </div>
                                        <!-- timeline item -->
                                        <div>
                                            <i class="fas fa-comments bg-warning"></i>

                                            <div class="timeline-item">
                                                @*<span class="time"><i class="far fa-clock"></i> 27 mins ago</span>*@

                                                <h3 class="timeline-header">Written by <a href="/AdminContent/ContentsByWriter/@item.WriterId">@item.Writer.WriterFirstName @item.Writer.WriterLastName</a> to <a href="/AdminContent/ContentsByHeading/@item.HeadingId">@item.Heading.HeadingName</a></h3>

                                                <div class="timeline-body">
                                                    @item.ContentText
                                                </div>
                                            </div>
                                        </div>
                                        <!-- END timeline item -->
                                    }
                                    <!-- /.timeline-label -->
                                    <div>
                                        <i class="far fa-clock bg-gray"></i>
                                    </div>
                                </div>
                            </div>
                            <!-- /.tab-pane -->
                            <!-- /.tab-pane -->
                        </div>
                        <!-- /.tab-content -->
                    </div><!-- /.card-body -->
                </div>
                <!-- /.nav-tabs-custom -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div><!-- /.container-fluid -->
</section>
<!-- /.content -->
