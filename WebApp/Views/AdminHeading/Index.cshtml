@using Entities.Concrete
@model List<Heading>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@{
    string color = "";
}

<!-- Default box -->
<div class="card">
    <div class="card-body p-0">
        <table class="table table-striped projects">
            <thead>
                <tr>
                    <th style="width: 1%">
                        #
                    </th>
                    <th style="width: 20%">
                        Başlık
                    </th>
                    <th style="width: 30%">
                        Yazar
                    </th>
                    <th style="width: 8%" class="text-center">
                        Kategori
                    </th>
                    <th style="width: 20%">
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    if (item.Category.CategoryName == "Eğitim")
                    {
                        color = "badge badge-primary";
                    }
                    else if (item.Category.CategoryName == "Tiyatro")
                    {
                        color = "badge badge-success";
                    }
                    else if (item.Category.CategoryName == "Kitap")
                    {
                        color = "badge badge-info";
                    }
                    else if (item.Category.CategoryName == "Spor")
                    {
                        color = "badge badge-warning";
                    }
                    else if (item.Category.CategoryName == "Film")
                    {
                        color = "badge badge-danger";
                    }
                    else if (item.Category.CategoryName == "Dizi")
                    {
                        color = "badge badge-secondary";
                    }
                    else
                    {
                        color = "badge badge-pill";
                    }
                    <tr>
                        <td>
                            @item.HeadingId
                        </td>
                        <td>
                            <a>
                                @item.HeadingName
                            </a>
                            <br />
                            <small>
                                @item.HeadingDate.ToString("dd.MM.yyyy") tarihinde oluşturuldu
                            </small>
                        </td>
                        <td>
                            <ul class="list-inline">
                                <li class="list-inline-item">
                                    <img alt="Avatar" class="table-avatar" src="@item.Writer.WriterImageUrl"> @item.Writer.WriterFirstName @item.Writer.WriterLastName
                                </li>
                            </ul>
                        </td>
                        <td class="project-state">
                            <span class="@color">@item.Category.CategoryName</span>
                        </td>
                        <td class="project-actions text-right">
                            <a class="btn btn-primary btn-sm" href="#">
                                <i class="fas fa-folder">
                                </i>
                                Yazılar
                            </a>
                            <a class="btn btn-info btn-sm" href="#">
                                <i class="fas fa-pencil-alt">
                                </i>
                                Düzenle
                            </a>
                            <a class="btn btn-danger btn-sm" href="#">
                                <i class="fas fa-trash">
                                </i>
                                Sil
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>
<!-- /.card -->
<div>
    <a href="/AdminHeading/AddHeading" class="btn btn-success">Yeni Başlık</a>
</div>
