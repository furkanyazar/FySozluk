@using Entities.Concrete
@model List<Writer>

@{
    ViewBag.Title = "Yazarlar";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Default box -->
<div class="card card-solid">
    <div class="card-body pb-0">
        <div class="row d-flex align-items-stretch">
            @foreach (var item in Model)
            {
                <div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch">
                    <div class="card bg-light">
                        <div class="card-header text-muted border-bottom-0">
                            @item.WriterTitle
                        </div>
                        <div class="card-body pt-0">
                            <div class="row">
                                <div class="col-7">
                                    <h2 class="lead"><b>@item.WriterFirstName @item.WriterLastName</b></h2>
                                    <p class="text-muted text-sm">@item.WriterAbout</p>
                                    <ul class="ml-4 mb-0 fa-ul text-muted">
                                        <li class="small"><span class="fa-li"><i class="fas fa-lg fa-envelope"></i></span><a href="mailto:@item.WriterEmail">@item.WriterEmail</a></li>
                                    </ul>
                                </div>
                                <div class="col-5 text-center">
                                    <img src="@item.WriterImageUrl" alt="" class="img-circle img-fluid">
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <div class="text-right">
                                <a href="/AdminHeading/HeadingsByWriter/@item.WriterId" class="btn btn-sm bg-teal">
                                    <i class="fas fa-comments"></i> Başlıklar
                                </a>
                                <a href="/AdminWriter/UpdateWriter/@item.WriterId" class="btn btn-sm btn-primary">
                                    <i class="fas fa-user"></i> Düzenle
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <!-- /.card-body -->
</div>
<!-- /.card -->
<div>
    <a href="/AdminWriter/AddWriter" class="btn btn-success">Yeni Yazar</a>
</div>
<br />
