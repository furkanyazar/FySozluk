@model Entities.Concrete.Writer

@{
    ViewBag.Title = "UpdateWriter";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yazar Güncelle</h2>
@using (Html.BeginForm("UpdateWriter", "AdminWriter", FormMethod.Post))
{
    <div class="form-group">
        @Html.HiddenFor(x => x.WriterId, new { @class = "form-control" })
        @Html.Label("Ad")
        @Html.TextBoxFor(x => x.WriterFirstName, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.WriterFirstName)
        <br />
        @Html.Label("Soyad")
        @Html.TextBoxFor(x => x.WriterLastName, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.WriterLastName)
        <br />
        @Html.Label("E-posta")
        @Html.TextBoxFor(x => x.WriterEmail, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.WriterEmail)
        <br />
        @Html.Label("Şifre")
        @Html.PasswordFor(x => x.WriterPassword, new { @class = "form-control", @placeholder = "Değiştirmek için doldurunuz" })
        @Html.ValidationMessageFor(x => x.WriterPassword)
        <br />
        @Html.Label("Hakkında")
        @Html.TextAreaFor(x => x.WriterAbout, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.WriterAbout)
        <br />
        @Html.Label("Başlık")
        @Html.TextBoxFor(x => x.WriterTitle, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.WriterTitle)
        <br />
        @Html.Label("Fotoğraf")
        @Html.TextBoxFor(x => x.WriterImageUrl, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.WriterImageUrl)
        <br />
        <button class="btn btn-success">Kaydet</button>
    </div>
}
