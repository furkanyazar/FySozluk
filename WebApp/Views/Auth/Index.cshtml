@using Entities.Concrete
@model List<Admin>

@{
    ViewBag.Title = "Yetkiler";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-hover">
    <tr>
        <th>ID</th>
        <th>E-posta</th>
        <th>Yetki</th>
        <th>Durum</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.AdminId</td>
            <td>@item.AdminEmail</td>
            <td>@item.AdminRole</td>
            <td><span class="badge badge-success">Aktif</span></td>
            <td>
                <a class="btn btn-info btn-sm" href="/Auth/UpdateAdmin/@item.AdminId">
                    <i class="fas fa-pencil-alt">
                    </i>
                    Düzenle
                </a>
                <a class="btn btn-danger btn-sm" href="/Auth/DeleteAdmin/@item.AdminId">
                    <i class="fas fa-trash">
                    </i>
                    Sil
                </a>
            </td>
        </tr>
    }
</table>
<div>
    <a href="/AdminWriter/AddAdmin" class="btn btn-success">Yeni Admin</a>
</div>
<br />
