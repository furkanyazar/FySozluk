@using Entities.Concrete
@model List<Category>

@{
    Layout = null;
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<table class="table table-hover" style="margin:16px;">
    <tr>
        <th>ID</th>
        <th>Kategori Adı</th>
        <th>Açıklama</th>
        <th>Durum</th>
        <th>Düzenle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.CategoryId</td>
            <td>@item.CategoryName</td>
            <td>@item.CategoryDescription</td>
            <td>@item.CategoryStatus</td>
            <td><button class="btn btn-warning">Düzenle</button></td>
        </tr>
    }
</table>
<div style="margin: 16px;">
    <button class="btn btn-success">Yeni Kategori</button>
    <button class="btn btn-primary">Kategori Listesi</button>
    <button class="btn btn-info">Kategori Açıklamaları</button>
</div>
